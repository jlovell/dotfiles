alias ll='ls -l'
alias lla='ls -la'
alias gs='git status'

alias be='bundle exec'
alias devlog='tail -f log/development.log'

alias recent-branches='for k in `git branch | perl -pe s/^..//`; do echo -e `git show --pretty=format:"%Cgreen%ci %Cblue%cr%Creset" $k -- | head -n 1`\\t$k; done | sort'

alias docker-start='bash --login /Applications/Docker/Docker\ Quickstart\ Terminal.app/Contents/Resources/Scripts/start.sh'
alias dcrw='docker-compose run web'
